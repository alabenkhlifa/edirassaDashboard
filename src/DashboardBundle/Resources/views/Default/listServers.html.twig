{% extends '@Dashboard/Default/layout.html.twig' %}
{% block title %}List Servers{% endblock %}
{% block body %}
    <section class="wrapper">
        <div class="row mt">
            <div class="col-md-12">
                <div class="content-panel">
                    <table class="table table-striped table-advance table-hover">
                        <h4><i class="fa fa-angle-right"></i> List Servers</h4>
                        <hr>
                        <thead>
                        <tr>
                            <th> Server Name</th>
                            <th class="hidden-phone"> IP Address</th>
                            <th class="hidden-phone"> Username</th>
                            <th class="hidden-phone"> Password</th>
                            <th class="hidden-phone"> Services</th>
                            <th></th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for server in servers %}
                        <tr>
                            <td>{{ server.name }}</td>
                            <td>{{ server.ip }}</td>
                            <td>{{ server.username }}</td>
                            <td>{{ server.password }}</td>
                            <td>
                                {% if server.services is not null %}
                                    {% for service in server.services %}
                                        <span class="label label-primary label-mini">{{ service.name }}</span>
                                    {% endfor %}
                                {% endif %}
                            </td>
                            <td>
                                <a class="btn btn-danger btn-xs" href="{{ path('dashboard_serverDelete', {'id': server.id}) }}">Delete</a>
                                <a class="btn btn-info btn-xs" href="{{ path('dashboard_sericeAssign', {'id': server.id}) }}">Assign Services</a>
                            </td>
                        </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div><!-- /content-panel -->
            </div><!-- /col-md-12 -->
        </div><!-- /row -->
    </section>
{% endblock %}