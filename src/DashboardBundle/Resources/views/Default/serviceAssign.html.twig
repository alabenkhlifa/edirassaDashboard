{% extends '@Dashboard/Default/layout.html.twig' %}
{% block title %}Add Server{% endblock %}
{% block body %}
    <section class="wrapper">
        <div class="row mt">
            <div class="col-lg-12">
                <div class="form-panel">
                    <h4><i class="fa fa-angle-right"> Assign Service to a Server</i></h4>
                    <center>
                    <form class="form-inline" role="form" method="post">
                        <div class="form-group">
                            <label class="sr-only" for="exampleInputEmail2">Server Name</label>
                            <input type="text" class="form-control" name="servername" value="{{ server.name }}" disabled>
                        </div>
                        <div class="form-group">
                            <label class="sr-only" for="exampleInputPassword2">Ip Address</label>
                            <input type="text" class="form-control" name="ip_address" value="{{ server.ip }}" disabled>
                        </div>
                        <br /> <br />
                        <div class="row">
                            <div class="form-group">
                                <label class="sr-only" for="exampleInputPassword2">Service</label>
                                <select multiple="multiple" class="form-control" size="6" name="services[]">
                                    {% for service in services %}
                                    <option value="{{ service.id }}"
                                            {% if service.server is not null %}
                                            {% if service.server.id == server.id %}
                                                selected
                                            {% endif %}
                                            {% endif %}
                                    >{{ service.name }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                            <button type="submit" class="btn btn-lg btn-theme">Assign</button>
                        </div>
                    </form>
                    </center>
                </div><!-- /form-panel -->
            </div><!-- /col-lg-12 -->
        </div><!-- /row -->
    </section>
{% endblock %}