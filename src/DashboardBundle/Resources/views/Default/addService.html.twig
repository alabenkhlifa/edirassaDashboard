{% extends '@Dashboard/Default/layout.html.twig' %}
{% block title %}Add Service{% endblock %}
{% block body %}
    <section class="wrapper">
        <div class="row mt">
            <div class="col-lg-12">
                <div class="form-panel">
                    <h4 class="mb"><i class="fa fa-angle-right"></i> Add a Service </h4>
                    <center>
                    <form class="form-inline" role="form" method="post">
                        <div class="form-group">
                            <label class="sr-only" for="exampleInputEmail2">Service Name</label>
                            <input type="text" class="form-control" id="servicename" name="servicename" placeholder="Service Name" maxlength="30" required>
                        </div>
                        <div class="form-group">
                            <label class="sr-only" for="exampleInputPassword2">Daemon Name</label>
                            <input type="text" class="form-control" id="daemonname" name="daemonname" placeholder="Daemon Name" required>
                        </div>
                        <button type="submit" class="btn btn-theme03">Add Service</button>
                    </form>
                    </center>
                </div><!-- /form-panel -->
            </div><!-- /col-lg-12 -->
        </div><!-- /row -->
    </section>
{% endblock %}